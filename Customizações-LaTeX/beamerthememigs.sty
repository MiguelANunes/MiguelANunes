%%%
%%% Temas padrão que servem de base
%%%

% Layout scheme for outer elements: split header and footer
\useoutertheme{split}

% Color scheme for outer elements: use background colors
\usecolortheme{whale}

% Layout scheme for inner elements: rounded elements
\useinnertheme{rounded}

% Color scheme for inner elements: use foreground colors
\usecolortheme{orchid}


%%%
%%% Customizações sobre os temas padrão
%%%

% Itemize items: default (triangle), circle, square, ball
\setbeamertemplate{itemize items}[circle]

% Enumerate items: default, circle, square, ball
\setbeamertemplate{enumerate items}[circle]

% Outline: default, sections numbered, subsections numbered, circle, square, ball, ball unnumbered
\setbeamertemplate{sections/subsections in toc}[ball]

% General blocks:
\setbeamertemplate{blocks}[rounded]

% Title page:
\setbeamertemplate{title page}[default][colsep=-4bp,rounded=true]

% Part page:
\setbeamertemplate{part page}[default][colsep=-4bp,rounded=true]

% Navigation symbols (none):
\setbeamertemplate{navigation symbols}{}


%%%
%%% Customizações dos componentes do slide 
%%%

%% Cores

% Cor do tema como um todo
\usecolortheme[RGB={53,9,59}]{structure}

% Cores dos componentes do slide
\setbeamercolor{frametitle}{parent=subsection in head/foot}
\setbeamercolor{frametitle right}{parent=section in head/foot}

% Cor do texto em alerta
\setbeamercolor{alerted text}{fg=red}

% Cores dos blocos
\setbeamercolor{block title}{bg=structure!90}
\setbeamercolor{block body}{bg=structure!20}
\setbeamercolor{block title alerted}{bg=alerted text.fg!70}
\setbeamercolor{block body alerted}{bg=alerted text.fg!20}
\setbeamercolor{block title example}{bg=blue!70}
\setbeamercolor{block body example}{bg=blue!20}

% Não tenho muita certeza do que faz isso
\pgfdeclarehorizontalshading[frametitle.bg,frametitle right.bg]{beamer@frametitleshade}{\paperheight}{%
  color(0pt)=(frametitle.bg);
  color(\paperwidth)=(frametitle right.bg)}

\AtBeginDocument{
  \pgfdeclareverticalshading{beamer@topshade}{\paperwidth}{%
    color(0pt)=(bg);
    color(4pt)=(black!50!bg)}
}

% Footline: AUTHOR | TITLE | DATE FRAMENUMBER

\defbeamertemplate*{footline}{migs theme}{%
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.31\paperwidth,ht=2.25ex,dp=1ex,center]{author in head/foot}%
    \usebeamerfont{author in head/foot}\insertshortauthor
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.12\paperwidth,ht=2.25ex,dp=1ex,center]{author in head/foot}%
    \usebeamerfont{author in head/foot}\insertshortdate
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.486667\paperwidth,ht=2.25ex,dp=1ex,center]{title in head/foot}%
    \usebeamerfont{title in head/foot}\insertshorttitle
  \end{beamercolorbox}%
   \begin{beamercolorbox}[wd=0.083333\paperwidth,ht=2.25ex,dp=1ex,right]{title in head/foot}%
    \insertframenumber{} / \inserttotalframenumber\hspace*{2ex}
  \end{beamercolorbox}}%
  \vskip0pt%
}

\defbeamertemplate*{headline}{migs theme}{%
  \leavevmode%
  \@tempdimb=2.4375ex%
    \multiply\@tempdimb by\beamer@sectionmax%
  \ifdim\@tempdimb>0pt%
    \advance\@tempdimb by 1.125ex%
    \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.5ex,dp=1.125ex]{section in head/foot}%
      \vfil \hbox to .5\paperwidth{\hfil\insertsectionhead\hfil} \vfil %
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.5ex,dp=1.125ex,right]{subsection in head/foot}%
      \vfil \hbox to .5\paperwidth{\hfil\insertsubsectionhead\hfil} \vfil%
    \end{beamercolorbox}%
  \fi%
}

\defbeamertemplate*{frametitle}{migs theme}
{%
  \nointerlineskip%
  \logo{\pgfuseimage{logo}}%
  \vskip-2pt%
  \hbox{\leavevmode
    \advance\beamer@leftmargin by -12bp%
    \advance\beamer@rightmargin by -12bp%
    \beamer@tempdim=\textwidth%
    \advance\beamer@tempdim by \beamer@leftmargin%
    \advance\beamer@tempdim by \beamer@rightmargin%
    \hskip-\Gm@lmargin\hbox{%
      \setbox\beamer@tempbox=\hbox{\begin{minipage}[b]{\paperwidth}%
          \vbox{}\vskip-.75ex%
          \leftskip0.3cm%
          \rightskip0.3cm plus1fil\leavevmode
          \usebeamercolor[fg]{frametitle}\usebeamerfont{frametitle}\strut\insertframetitle\par%
          \ifx\insertframesubtitle\@empty\else%
            {\usebeamerfont*{framesubtitle}{\usebeamercolor[fg]{framesubtitle}\insertframesubtitle}\strut\par}%
          \fi%
          \nointerlineskip
          \vbox{}%
          \end{minipage}}%
      \beamer@tempdim=\ht\beamer@tempbox%
      \advance\beamer@tempdim by 2pt%
      \begin{pgfpicture}{0pt}{0pt}{\paperwidth}{\beamer@tempdim}
        \usebeamercolor{frametitle right}
        \pgfpathrectangle{\pgfpointorigin}{\pgfpoint{\paperwidth}{\beamer@tempdim}}
        \pgfusepath{clip}
        \pgftext[left,base]{\pgfuseshading{beamer@frametitleshade}}
      \end{pgfpicture}
      \hskip-\paperwidth%
      \box\beamer@tempbox%
    }%
    \hskip-\Gm@rmargin%
  }%
  % \nointerlineskip
  %   \vskip-0.2pt
  %   \hbox to\textwidth{\hskip-\Gm@lmargin\pgfuseshading{beamer@topshade}\hskip-\Gm@rmargin}
  %   \vskip-2pt
}

%%%
%%% Demais Customizações
%%%

% Texto que será apresentado apenas no próximo slide fica transparente ao invés de invisível
\setbeamercovered{transparent}

% Seções sempre começam no 0
\patchcmd{\beamer@sectionintoc}
  {\ifnum\beamer@tempcount>0}
  {\ifnum\beamer@tempcount>-1}
  {}
  {}
\beamer@tocsectionnumber=-1
\setcounter{section}{-1}

% Slide que mostra a nova seção atual quando ela mudo para ela, de modo mais controlado
\def\SecT{
    \begin{frame}
        \centering{\huge\thesection. \insertsection}

        \vspace{\baselineskip}
    \end{frame}
}

% Slide que mostra a nova subseção atual quando ela mudo para ela, de modo mais controlado
\def\SubSecT{
    \begin{frame}
        \centering{\huge\thesection.\thesubsection\ \insertsubsection}

        \vspace{\baselineskip}
    \end{frame}
}

% Suprimindo warnings do hyperref
\pdfstringdefDisableCommands{%
  \def\\{}%
  \def\texttt#1{#1}%
  \def\smallskip{}%
  \def\medskip{}%
}

% Caso um slide seja quebrado com framebreak, isso evita que os novos slides tenham um número sequencial ao final
\setbeamertemplate{frametitle continuation}{}